{
  "name": "repost",
  "version": "0.1",
  "description": "experience together",
  "app": {
    "launch": {
      "local_path": "bootstrap.html"
    }
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["http://*/*","https://*/*"],
      "css" : ["css/content.css"],
      "js": ["js/content.js","js/posttext.js","js/postimage.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon-16.jpeg",
    "48": "icon-48.jpeg",
    "128": "icon-128.jpeg"
  },
  "omnibox": {"keyword" : "repost"},
  "plugins": [
    { "path": "rpl.plugin"  },
    { "path": "nprpl.dll"  },
    { "path": "librpl.so"  }
  ],
  "permissions": [
    "tabs",
    "unlimitedStorage",
    "notifications",
    "http://*/",
    "https://*/"
  ]
}
