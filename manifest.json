{
  "name": "Repost",
  "version": "0.5",
  "description": "Ferris Bueller",
  "app": {
    "launch": {
      "local_path": "bootstrap.html"
    }
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["http://*/*","https://*/*"],
      "css" : ["css/content.css"],
      "js": ["js/jquery-1.6.1.min.js", "js/common.js", "js/textpostbox.js",
                "js/content.js", "js/postimage.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "images/icon-16.jpeg",
    "48": "images/icon-48.jpeg",
    "128": "images/icon-128.jpeg"
  },
  "omnibox": {"keyword" : "repost"},
  "plugins": [
    { "path": "rpl.plugin"  },
    { "path": "nprpl.dll"  },
    { "path": "librpl.so"  }
  ],
  "permissions": [
    "tabs",
    "contextMenus",
    "unlimitedStorage",
    "notifications",
    "http://*/",
    "https://*/"
  ]
}
